<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ui="clr-namespace:CrissCross.WPF.UI.Controls">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="pack://application:,,,/CrissCross.WPF.UI;component/Controls/Button/Button.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <Style
        x:Key="DefaultUiCalendarDatePickerStyle"
        BasedOn="{StaticResource DefaultUiButtonStyle}"
        TargetType="{x:Type ui:CalendarDatePicker}">
        <Setter Property="Icon">
            <Setter.Value>
                <ui:SymbolIcon Symbol="CalendarRtl24" />
            </Setter.Value>
        </Setter>
    </Style>

    <Style BasedOn="{StaticResource DefaultUiCalendarDatePickerStyle}" TargetType="{x:Type ui:CalendarDatePicker}" />

</ResourceDictionary>
