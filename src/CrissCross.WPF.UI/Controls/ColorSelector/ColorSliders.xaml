                    Maximum="255"
                    Minimum="0"
                    SliderArgbType="B"
                    SmallChangeBindable="{Binding SmallChange, ElementName=uc}"
                    TabIndex="3"
                    Value="{Binding Color.RGB_B, ElementName=uc, Mode=TwoWay}" />
