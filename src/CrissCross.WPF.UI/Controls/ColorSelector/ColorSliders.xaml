                    Grid.Row="2"
                    Grid.Column="2"
                    Width="40"
                    Height="18"
                    TabIndex="7"
                    Text="{Binding Color.RGB_B, Converter={StaticResource TwoFiftyFiveChannelConverter}, ElementName=uc, StringFormat=N0}"
