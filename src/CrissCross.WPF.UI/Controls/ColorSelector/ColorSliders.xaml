    MinWidth="200"
    MinHeight="150"
    d:DesignHeight="150"
    d:DesignWidth="300"
    mc:Ignorable="d">
    <local:PickerControlBase.Resources>
        <ResourceDictionary>
            <conv:RangeConstrainedDoubleToDoubleConverter
                x:Key="HueChannelConverter"
                Max="359"
                Min="0" />
            <conv:RangeConstrainedDoubleToDoubleConverter
                x:Key="HundredChannelConverter"
                Max="100"
                Min="0" />
            <conv:RangeConstrainedDoubleToDoubleConverter
                x:Key="TwoFiftyFiveChannelConverter"
                Max="255"
                Min="0" />
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles/ColorSliderStyle.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </local:PickerControlBase.Resources>
    <TabControl
        Canvas.Top="290"
        MaxHeight="130"
        Margin="10"
        VerticalAlignment="Top">
        <TabControl.Resources>
            <Style TargetType="TabPanel">
                <Setter Property="HorizontalAlignment" Value="Right" />
            </Style>
        </TabControl.Resources>
        <TabItem Header="RGB">
            <Grid Margin="0,10,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="18" />
                    <ColumnDefinition />
                    <ColumnDefinition Width="45" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="20" />
                    <RowDefinition Height="20" />
                    <RowDefinition Height="20" />
                    <RowDefinition>
                        <RowDefinition.Style>
                            <Style TargetType="{x:Type RowDefinition}">
                                <Setter Property="Height" Value="20" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding ShowAlpha, ElementName=uc}" Value="False">
                                        <Setter Property="Height" Value="0" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </RowDefinition.Style>
                    </RowDefinition>
                </Grid.RowDefinitions>

                <ui:TextBlock
                    Grid.Row="0"
                    Grid.Column="0"
                    HorizontalAlignment="Center"
                    Text="R" />
                <uie:RgbColorSlider
                    Grid.Row="0"
                    Grid.Column="1"
                    Height="12"
                    CurrentColorState="{Binding ColorState, ElementName=uc}"
                    IsMoveToPointEnabled="True"
                    Maximum="255"
                    Minimum="0"
                    SliderArgbType="R"
                    SmallChangeBindable="{Binding SmallChange, ElementName=uc}"
                    TabIndex="1"
                    Value="{Binding Color.RGB_R, ElementName=uc, Mode=TwoWay}" />
                <ui:TextBox
                    Grid.Row="0"
                    Grid.Column="2"
                    Width="40"
                    Height="18"
                    TabIndex="5"
                    Text="{Binding Color.RGB_R, Converter={StaticResource TwoFiftyFiveChannelConverter}, ElementName=uc, StringFormat=N0}"
                    TextAlignment="Center">
                    <i:Interaction.Behaviors>
                        <behaviors:TextBoxFocusBehavior />
                    </i:Interaction.Behaviors>
                </ui:TextBox>

                <ui:TextBlock
                    Grid.Row="1"
                    Grid.Column="0"
                    HorizontalAlignment="Center"
                    Text="G" />
