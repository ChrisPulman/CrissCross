<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>$(CrissCrossWinTargetFrameworks)</TargetFrameworks>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <UseWPF>true</UseWPF>
    <IsPackable>false</IsPackable>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="CP.Extensions.Hosting.ReactiveUI.Wpf" Version="1.1.18" />
    <PackageReference Include="ReactiveMarbles.ObservableEvents.SourceGenerator" Version="1.3.1" />
    <PackageReference Include="WPF-UI" Version="3.0.0-preview.13" />
    <PackageReference Include="WPF-UI.Tray" Version="3.0.0-preview.11" />
    <PackageReference Include="AppBarButton.WPF" Version="0.4.2" />
    <PackageReference Include="BBCode.WPF" Version="0.2.0" />
    <PackageReference Include="CP.Xaml.Converters" Version="1.0.2" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\CrissCross.WPF\CrissCross.WPF.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Page Update="Themes\CrissCross.Wpf.UI.xaml">
      <CopyToOutputDirectory>Never</CopyToOutputDirectory>
    </Page>
    <Page Update="Themes\ModernWindow.xaml">
      <CopyToOutputDirectory>Never</CopyToOutputDirectory>
    </Page>
  </ItemGroup>

</Project>
