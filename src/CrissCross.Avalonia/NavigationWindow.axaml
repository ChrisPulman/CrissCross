<Styles
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:CrissCross.Avalonia">
    <Design.PreviewWith>
        <controls:NavigationWindow />
    </Design.PreviewWith>

    <Style Selector="controls|NavigationWindow">
        <!--  Set Defaults  -->
        <Setter Property="Template">
            <ControlTemplate>
                <controls:ViewModelRoutedViewHost
                    x:Name="PART_NavigationFrame"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    HostName="{TemplateBinding Name}"
                    NavigateBackIsEnabled="{TemplateBinding NavigateBackIsEnabled}" />
            </ControlTemplate>
        </Setter>
    </Style>
</Styles>
